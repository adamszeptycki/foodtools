{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@foodtools/core/*": ["../core/*"],
			"@foodtools/types/*": ["../types/*"],
			"@foodtools/core-web/*": ["../core-web/*"],
			"@foodtools/functions/*": ["../functions/*"],
			"@foodtools/web/*": ["./*"]
		},
		"target": "esnext",
		"baseUrl": "./"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
