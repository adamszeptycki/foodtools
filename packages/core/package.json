{
  "name": "@foodtools/core",
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "test": "vitest",
    "typecheck": "tsc --noEmit --strict",
    "db:nuke:up": "pnpm db:nuke && pnpm db:up",
    "db:nuke:up:migrate": "pnpm db:nuke && pnpm db:up && pnpm db:migrate:local",
    "db:nuke": "docker-compose down --volumes --remove-orphans",
    "db:up": "docker-compose up -d && sleep 3 && docker-compose exec -T foodtools-db createdb -U postgres foodtools",
    "db:migrate:local": "dotenvx run -f .env.dev -- drizzle-kit migrate",
    "db:generate:migrations": "dotenvx run -f .env.dev -- drizzle-kit generate"
  },
  "exports": {
    "./*": [
      "./src/*/index.ts",
      "./src/*.ts"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/client-sqs": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "better-auth": "^1.2.12",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "openai": "^6.16.0",
    "unpdf": "^0.12.1",
    "pg": "^8.12.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  }
}
