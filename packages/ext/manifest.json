{
  "manifest_version": 3,
  "name": "Lucidiant",
  "description": "description in manifest.json",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "action": {
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "src/pages/newtab/index.html"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "offscreen",
    "tabs",
    "storage"
  ],
  "optional_permissions": [
    "tabCapture"
  ],
  "side_panel": {
    "default_path": "src/pages/panel/index.html"
  },
  "background": {
    "service_worker": "src/pages/background/index.ts"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "src/pages/content/index.tsx"
      ],
      "css": [
        "contentStyle.css"
      ]
    }
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "icon-128.png",
        "icon-32.png",
        "src/pages/offscreen/index.html"
      ],
      "matches": []
    }
  ]
}
