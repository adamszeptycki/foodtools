{
	"compilerOptions": {
		"tsBuildInfoFile": ".tsbuildinfo",
		"lib": ["dom", "dom.iterable", "esnext"],
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@foodtools/core-web/*": ["../core-web/*"],
			"@foodtools/core/*": ["../core/*"],
			"@foodtools/functions/*": ["../functions/*"],
			"@foodtools/web/*": ["./*"],
			"@foodtools/types/*": ["../types/*"]
		},
		"target": "esnext",
		"baseUrl": "./"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
	],
	"exclude": ["node_modules"]
}
